<p style="color: green"><%= notice %></p>

<% content_for :title, "Events" %>

<h1>Events</h1>

<div id="events">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Starts At</th>
        <th>Ends At</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
      <%= render event %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New event", new_event_path %>
