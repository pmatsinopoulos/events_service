<%= form_with(model: traveller) do |form| %>
<% if traveller.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(traveller.errors.count, "error") %> prohibited this traveller from being saved:</h2>

  <ul>
    <% traveller.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row mb-3">
  <%= form.label :mobile, class: 'col-sm-2 col-form form-label' %>
  <div class="col-sm-10">
    <%= form.text_field :mobile, class: 'form-control' %>
  </div>
</div>

<div class="row mb-3">
  <%= form.label :event_type, class: 'col-sm-2 col-form form-label' %>
  <div class="col-sm-10">
    <%= form.select :event_type, Event.event_types.keys.map { |type| [type.humanize, type] }, { include_blank: true }, {class: 'form-control form-select'} %>
  </div>
</div>

<div>
  <%= form.submit class: "btn btn-primary" %>
</div>
<% end %>
