<%= form_with(model: subscription) do |form| %>
<% if subscription.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

  <ul>
    <% subscription.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row mb-3">
  <%= form.label :event_type, class: 'col-sm-2 col-form form-label' %>
  <div class="col-sm-10">
    <%= form.select :event_type, Event.event_types.keys.map { |type| [type.humanize, type] }, { include_blank: true }, {class: 'form-control form-select'} %>
  </div>
</div>

<div class="row mb-3">
  <%= form.label :name, class: 'col-sm-2 col-form form-label' %>
  <div class="col-sm-10">
    <%= form.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="row mb-3">
  <%= form.label :url, class: 'col-sm-2 col-form form-label' %>
  <div class="col-sm-10">
    <%= form.text_field :url, class: 'form-control' %>
  </div>
</div>

<div class="row mb-3">
  <%= form.label :active, class: 'col-sm-2 col-form form-check-label' %>
  <div class="col-sm-10">
    <%= form.check_box :active, class: 'form-check-input' %>
  </div>
</div>

<div>
  <%= form.submit class: "btn btn-primary" %>
</div>
<% end %>
